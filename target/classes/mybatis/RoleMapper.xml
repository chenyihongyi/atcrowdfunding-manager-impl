<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.atguigu.atcrowdfunding.manager.dao.RoleMapper">

    <insert id="insert">
        insert into t_role (name) values (#{name})
    <selectKey keyProperty="id" resultType="int">
    select @@identity as id
     </selectKey>
    </insert>

    <delete id="deleteRolePermissionRelationship">
    delete from t_role_permission where roleid=#{roleid}
    </delete>

    <insert id="insertRolePermission">
    insert into t_role_permission(roleid, permissionid) values(#{roleid}, #{permissionid})
    </insert>

    <delete id="batchDelete">
    delete from t_role where id in
    <foreach collection="ids" item="id" open="(" close=")" separator=",">
    #{id}
    </foreach>
   </delete>

    <delete id="batchDeleteObj">
    delete from t_role where id in
    <foreach collection="datas" item="role" open="(" close=")" separator=",">
    #{role.id}
    </foreach>
    </delete>

    <delete id="delete">
    delete from t_role where id = #{id}
    </delete>

    <update id="update" parameterType="Role">
    update t_role
    set name = #{name}
    where id = #{id}
    </update>

    <select id="getRole" resultType="Role">
    select * from t_role where id = #{id}
    </select>

    <select id="pageQuery" resultType="Role">
    select * from t_role
    <where>
    <if test="queryText!=null">
        name like concat('%', #{queryText}, '%')
    </if>
    </where>
    limit #{startIndex}, #{pagesize}
    </select>

    <select id="queryCount" resultType="int">
        select count(*) from t_role
        <where>
            <if test="queryTest!=null">
                name like concat('%', #{queryText}, '%')
            </if>
        </where>
    </select>


</mapper>